{
  "compilerOptions": {
    "moduleResolution": "Node16",
    "lib": ["ES2023"],
    "module": "node16",
    "target": "ES2022",

    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@enums": ["src/enums"],
      "@enums/*": ["src/enums/*"],
      "@errors": ["src/errors"],
      "@errors/*": ["src/errors/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@routers": ["src/routers"],
      "@routers/*": ["src/routers/*"],
      "@middlewares": ["src/middlewares"],
      "@middlewares/*": ["src/middlewares/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@schemas": ["src/schemas"],
      "@dtos": ["src/dtos"],
      "@dtos/*": ["src/dtos/*"],
      "@mappers": ["src/mappers"],
      "@mappers/*": ["src/mappers/*"],
      "@abstracts": ["src/abstracts"],
      "@abstracts/*": ["src/abstracts/*"]
    }
  },
  "exclude": ["node_modules", ".build", "jest.config.js"]
}
